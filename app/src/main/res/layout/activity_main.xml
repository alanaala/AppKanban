<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu Quadro Kanban"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnNovaTarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Tarefa"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A Fazer"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAFazer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:padding="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fazendo"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAndamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:padding="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ConcluÃ­do"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerConcluido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>